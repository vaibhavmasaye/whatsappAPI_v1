PORT=3000

# Gemini / Google Generative AI
GEMINI_API_KEY=your_gemini_api_key
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash:generateContent

# WhatsApp (Meta) Cloud API
WHATSAPP_TOKEN=your_whatsapp_bearer_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Postgres DB (mirror of Shopify app data)
DATABASE_URL=postgres://user:password@localhost:5432/shopify_sync_db

# Shopify (optional: if you want direct Admin API access)
SHOPIFY_SHOP=my-shop.myshopify.com
SHOPIFY_ADMIN_ACCESS_TOKEN=shopify_admin_token

# Logging
LOG_LEVEL=info
